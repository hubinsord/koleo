<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Koleo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/background_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_black</item>
        <item name="android:textColorPrimary">@color/text_primary</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Koleo.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Koleo.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Koleo.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Koleo.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Koleo.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Koleo.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Koleo.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Koleo.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Koleo.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Koleo.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Koleo.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Koleo.Overline</item>
    </style>

    <style name="Theme.Koleo" parent="Base.Theme.Koleo" />
</resources>